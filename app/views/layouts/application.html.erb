<!DOCTYPE html>
<html>
<head>
  <title>IVoter</title>
  <%= stylesheet_link_tag    'application', controller_name, media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', controller_name, 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |key, msg| %>
  <div class="alert alert-dismissable <%= flash_class(key) %>"> 
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <%= msg %>
  </div>
<% end %>

<%= yield %>

</body>
</html>
