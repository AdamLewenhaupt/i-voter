<div class="container">
	<div id="login" class="<%= 'hidden' if session[:valid] %>">
		<input id="pass" type="password" class="form-control" placeholder="Password" />
	</div>
	<div id="panel" class="<%= 'hidden' if not session[:valid] %>">
		<div class="vote-active <%= 'hidden' if not $voting %>">
			<h1>Röstning pågår</h1>
			<h2>Antal närvarande: <span id="voter-count">--</span></h2>
			<div class="row">
				<div class="col-sm-6">
					<div class="well">
						<% $voteOptions.each do |opt| %>
							<div><%= opt %></div>
						<% end %>
					</div>
				</div>
				<div class="col-sm-6">

				</div>
			</div>
		</div>
		<div class="vote-init <%= 'hidden' if $voting %>">
			<div class="row">
				<div class="col-sm-6">
					<h1>Sätt upp ny röstning</h1>
					<div id="add" class="btn btn-success">
						Lägg till alternativ
						<span class="glyphicon glyphicon-plus"></span>
					</div>
					<div class="well">
						<div id="options">
						</div>
					</div>
				</div>
				<div class="col-sm-6">
					<h1>
						Kontroll
					</h1>
					<div id="begin" class="btn btn-lg btn-block btn-success">
						Starta röstning
					</div>
				</div>
			</div>
		</div>
	</div>
</div>